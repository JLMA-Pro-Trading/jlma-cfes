{
  "name": "jlma-cfes",
  "version": "1.0.0",
  "description": "JLMA Claude Flow Enhancement System - Unified performance enhancement layer for claude-flow",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "jlma-cfes": "./bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "benchmark": "node tests/benchmark.js",
    "validate": "node bin/cli.js check",
    "setup": "node scripts/setup.js",
    "cleanup": "node scripts/cleanup.js",
    "example": "node examples/basic-usage.js",
    "example:advanced": "node examples/advanced-features.js",
    "example:claude-flow": "node examples/claude-flow-integration.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
