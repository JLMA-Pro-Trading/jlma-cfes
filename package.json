  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "claude-flow": ">=2.0.0"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.5.0"
  },
  "files": [
    "bin/",
    "src/",
    "config/",
    "README.md"
